<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.project.k51star.mapper.MemberMapper">

	<select id="selectMember"
		resultType="com.project.k51star.dto.Account"
		parameterType="java.lang.String">
		SELECT
		*
		FROM
		ACCOUNT
		WHERE
		EMAIL=#{email}
	</select>

	<update id="updateMember" parameterType="com.project.k51star.dto.Account">
		UPDATE ACCOUNT 
		SET 
		NAME=#{name}
		,PASSWORD=#{password}
		WHERE
		EMAIL= #{email} ;
	</update>

	<delete id="deleteMember" parameterType="java.lang.String">
		DELETE FROM ACCOUNT
		WHERE 
		EMAIL=#{email};
	</delete>
	
	<select id="searchMemberById" parameterType="String" resultType="Integer">
		SELECT COUNT(*)
		FROM car
		WHERE member_id=#{id}
	</select>
	
	<select id="searchKPLByEmail" parameterType="String" resultType="String">
		SELECT
			CI.KPL
		FROM
			CAR AS C 
				LEFT OUTER JOIN 
			CAR_INFO AS CI
				ON	C.CAR_ID = CI.CAR_ID
		WHERE
			C.MEMBER_ID = (SELECT
			A.ID
		FROM
			ACCOUNT AS A
		WHERE
			A.EMAIL LIKE #{email})
	</select>
</mapper>